{
  "name": "yep-horse-racing",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build:client": "tsc -b && vite build",
    "build:server": "esbuild server/index.js --platform=node --bundle --outfile=dist-server/index.cjs --drop:console --packages=external",
    "build": "npm run build:client && npm run build:server",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node dist-server/index.cjs",
    "start": "npm run build && npm run server",
    "start:clean": "npx kill-port 3000 && npm run start",
    "clean:port": "npx kill-port 3000",
    "stress-test": "node scripts/stress-test.js"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.4",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
